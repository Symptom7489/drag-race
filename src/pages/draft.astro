---
import MainLayout from '../layouts/MainLayout.astro';
import { sql } from '../lib/db';
import { getUserLeagues } from '../lib/queries'; // Assuming this is in your lib

const userId = Astro.cookies.get("userId")?.value;
if (!userId) return Astro.redirect('/login');

// 1. Fetch Global Settings
const settingsRows = await sql`SELECT * FROM settings`;
const settings = Object.fromEntries(settingsRows.map(r => [r.key, r.value]));
const currentEp = parseInt(settings.current_episode || "1");
const isLocked = settings[`locked_ep_${currentEp}`] === 'true';

// 2. Handle League Selection
const myLeagues = await getUserLeagues(userId); 
const selectedLeagueId = Astro.url.searchParams.get('leagueId') || myLeagues[0]?.id;

if (!selectedLeagueId) {
    // If they aren't in any leagues, they shouldn't be drafting
    return Astro.redirect('/dashboard?error=no_leagues');
}

// 3. Fetch Existing Roster for THIS league and episode
const existingRoster = await sql`
  SELECT r.*, q.image_url 
  FROM rosters r
  LEFT JOIN queens q ON r.queen_name = q.name
  WHERE r.user_id = ${userId} 
    AND r.episode_number = ${currentEp} 
    AND r.league_id = ${selectedLeagueId}
  ORDER BY r.rank ASC
`;

const queens = await sql`SELECT * FROM queens ORDER BY name ASC`;

// Helper to pre-populate slots
const getQueenAtRank = (rank) => existingRoster.find(r => r.rank === rank);

const slot1 = getQueenAtRank(1);
const slot2 = getQueenAtRank(2);
const slot3 = getQueenAtRank(3);
const slot4 = getQueenAtRank(4);

// 4. Handle POST (Saving the Team)
if (Astro.request.method === "POST") {
  if (isLocked) return new Response("Locked", { status: 403 });

  const data = await Astro.request.formData();
  const targetLeagueId = data.get("leagueId"); // Get league from hidden input
  
  const pickedQueens = [
    data.get("queen1"),
    data.get("queen2"),
    data.get("queen3"),
    data.get("queen4")
  ].filter(q => q && q !== "");

  const uniquePicks = new Set(pickedQueens);
  if (uniquePicks.size !== pickedQueens.length) return Astro.redirect('./draft?error=duplicate');

  if (pickedQueens.length > 0) {
    // SCOPED DELETE: Only delete this user's team for THIS league and THIS episode
    await sql`
      DELETE FROM rosters 
      WHERE user_id = ${userId} 
        AND episode_number = ${currentEp} 
        AND league_id = ${targetLeagueId}
    `;
    
    for (let i = 0; i < pickedQueens.length; i++) {
      await sql`
        INSERT INTO rosters (user_id, queen_name, rank, episode_number, league_id)
        VALUES (${userId}, ${pickedQueens[i]}, ${i + 1}, ${currentEp}, ${targetLeagueId})
      `;
    }
    return Astro.redirect('/dashboard?success=drafted');
  }
}
---
{Astro.url.searchParams.get('error') === 'duplicate' && (
  <div class="alert alert-error mb-4 shadow-lg bg-red-500 text-white p-4 rounded-lg">
    <span>You cannot pick the same queen for multiple ranks! Please choose 4 different queens.</span>
  </div>
)}

<MainLayout title="Draft Your Team">
  <div class="max-w-4xl mx-auto py-10 px-4">
    
    <div class="mb-8 p-6 bg-slate-900 rounded-[2.5rem] text-white">
      <label class="block text-[10px] font-black uppercase tracking-widest text-slate-400 mb-2">Drafting For League:</label>
      <select 
        onchange="window.location.search = '?leagueId=' + this.value"
        class="w-full bg-transparent text-2xl font-black uppercase italic border-none focus:ring-0 cursor-pointer text-pink-500"
      >
        {myLeagues.map(l => (
          <option value={l.id} selected={l.id == selectedLeagueId}>{l.league_name}</option>
        ))}
      </select>
    </div>

    <form method="POST">
      <input type="hidden" name="leagueId" value={selectedLeagueId} />
      <div class="grid grid-cols-2 gap-8 mb-10">
  {[1, 2, 3, 4].map((num) => {
    const currentSlot = [slot1, slot2, slot3, slot4][num - 1];
    return (
      <div class="bg-white p-8 rounded-[3rem] border-2 border-slate-100 shadow-sm flex flex-col items-center group hover:border-pink-200 transition-all">
        <div class="relative w-48 h-48 md:w-64 md:h-64 bg-slate-50 rounded-[2.5rem] mb-6 overflow-hidden flex items-center justify-center border-4 border-slate-50 shadow-inner">
          <span id={`icon-slot-${num}`} class={`text-4xl ${currentSlot ? 'hidden' : ''}`}>ðŸ‘‘</span>
          <img 
            id={`img-slot-${num}`} 
            src={currentSlot?.image_url || ''} 
            class={`w-full h-full object-cover transition-all duration-500 group-hover:scale-110 ${currentSlot ? 'opacity-100' : 'opacity-0'}`} 
          />
          <div class="absolute top-4 left-4 bg-slate-900 text-white w-10 h-10 rounded-full flex items-center justify-center font-black italic text-lg shadow-lg">
            {num}
          </div>
        </div>
        
        <div class="w-full max-w-xs text-center">
          <p class="text-[11px] font-black uppercase text-slate-400 mb-3 tracking-[0.2em]">Select Your Rank {num}</p>
          
          <select 
            name={`queen${num}`} 
            id={`select-slot-${num}`}
            class="queen-selector w-full bg-slate-50 border-2 border-slate-50 rounded-2xl py-4 px-4 text-sm font-black focus:ring-4 focus:ring-pink-100 focus:border-pink-500 outline-none uppercase transition-all cursor-pointer"
          >
            <option value="">â€” Choose Queen â€”</option>
            {queens.map(q => (
              <option 
                value={q.name} 
                data-photo={q.image_url} 
                selected={currentSlot?.queen_name === q.name}
              >
                {q.name}
              </option>
            ))}
          </select>
        </div>
      </div>
    )
  })}
</div>
      
      <button type="submit" disabled={isLocked} class="w-full py-4 bg-pink-600 text-white font-black rounded-2xl uppercase tracking-widest hover:scale-105 transition-transform disabled:opacity-50">
        {isLocked ? 'ðŸ”’ Episode Locked' : 'Save Lineup'}
      </button>
    </form>
  </div>
</MainLayout>

<script>
  // Client-side script to update images when dropdown changes
  const selectors = document.querySelectorAll('.queen-selector');
  
  selectors.forEach(select => {
    select.addEventListener('change', (e) => {
      const num = e.target.id.split('-').pop();
      const selectedOption = e.target.options[e.target.selectedIndex];
      const photoUrl = selectedOption.getAttribute('data-photo');
      
      const img = document.getElementById(`img-slot-${num}`);
      const icon = document.getElementById(`icon-slot-${num}`);
      
      if (photoUrl) {
        img.src = photoUrl;
        img.classList.remove('opacity-0');
        img.classList.add('opacity-100');
        icon.classList.add('hidden');
      } else {
        img.classList.add('opacity-0');
        icon.classList.remove('hidden');
      }
    });
  });
</script>

