---
import MainLayout from '../layouts/MainLayout.astro';
import { sql } from '../lib/db';

const userId = Astro.cookies.get("userId")?.value;
if (!userId) return Astro.redirect('/login');

// 1. Fetch Global Settings
const settingsRows = await sql`SELECT * FROM settings`;
const settings = Object.fromEntries(settingsRows.map(r => [r.key, r.value]));

const currentEp = parseInt(settings.current_episode || "1");
const isLocked = settings[`locked_ep_${currentEp}`] === 'true';

// 2. Fetch Existing Roster for THIS specific episode
const existingRoster = await sql`
  SELECT r.*, q.image_url 
  FROM rosters r
  LEFT JOIN queens q ON r.queen_name = q.name
  WHERE r.user_id = ${userId} AND r.episode_number = ${currentEp} 
  ORDER BY r.rank ASC
`;

const queens = await sql`SELECT * FROM queens ORDER BY name ASC`;
const hasDrafted = existingRoster.length > 0;

if (Astro.request.method === "POST") {
  if (isLocked) {
    return new Response("This episode is locked for drafting.", { status: 403 });
  }

  const data = await Astro.request.formData();
  
  // 1. Get the picks and filter out empties immediately
  const pickedQueens = [
    data.get("queen1"),
    data.get("queen2"),
    data.get("queen3"),
    data.get("queen4")
  ].filter(q => q && q !== "");

  // 2. Validate for duplicates
  const uniquePicks = new Set(pickedQueens);
  if (uniquePicks.size !== pickedQueens.length) {
    return Astro.redirect('/draft?error=duplicate');
  }

  // 3. Save to database if we have at least one queen
  if (pickedQueens.length > 0) {
    // Delete existing roster for this specific week only
    await sql`DELETE FROM rosters WHERE user_id = ${userId} AND episode_number = ${currentEp}`;
    
    // Insert the new picks
    for (let i = 0; i < pickedQueens.length; i++) {
      const queenName = pickedQueens[i];
      const rank = i + 1;

      if (queenName) {
        await sql`
          INSERT INTO rosters (user_id, queen_name, rank, episode_number)
          VALUES (${userId}, ${queenName}, ${rank}, ${currentEp})
        `;
      }
    }
    return Astro.redirect('/dashboard');
  }
}
---
{Astro.url.searchParams.get('error') === 'duplicate' && (
  <div class="alert alert-error mb-4 shadow-lg bg-red-500 text-white p-4 rounded-lg">
    <span>You cannot pick the same queen for multiple ranks! Please choose 4 different queens.</span>
  </div>
)}

<MainLayout title={`Episode ${currentEp} Draft`}>
  <div class="max-w-4xl mx-auto py-10 px-4">
    
    {isLocked ? (
      <div class="bg-slate-900 rounded-[2.5rem] p-10 text-center border-4 border-pink-600 shadow-2xl mb-10">
        <div class="inline-block bg-pink-600 text-white text-[10px] font-black px-4 py-1 rounded-full mb-4 uppercase tracking-[0.3em]">
          System Locked
        </div>
        <h2 class="text-4xl font-black italic uppercase text-white mb-2">Lineups are Set</h2>
        <p class="text-slate-400 font-bold uppercase text-xs tracking-widest leading-relaxed">
          Drafting for Episode {currentEp} is closed.<br/>
          Check the leaderboard to see how your team is performing!
        </p>
      </div>
    ) : (
      <div class="mb-10 text-center">
        <h1 class="text-5xl font-black italic uppercase text-slate-900 leading-tight">Episode {currentEp} Draft</h1>
        <p class="text-slate-500 font-bold uppercase tracking-widest text-xs mt-2 text-pink-600">
          Choose your power-rankings for this week
        </p>
      </div>
    )}

    {!isLocked && (
      <form method="POST" class="space-y-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {[1, 2, 3, 4].map((num) => (
            <div class="group bg-white rounded-[2.5rem] overflow-hidden border-2 border-slate-100 shadow-sm flex flex-col transition-all hover:border-pink-300">
              
              <div class="aspect-[4/3] bg-slate-100 flex items-center justify-center relative overflow-hidden">
                <img 
                  id={`img-slot-${num}`}
                  src={existingRoster[num-1]?.image_url || ""} 
                  class={`absolute inset-0 w-full h-full object-cover transition-all duration-500 ease-out group-hover:scale-110 ${existingRoster[num-1]?.image_url ? 'opacity-100' : 'opacity-0'}`}
                />
                
                <span id={`icon-slot-${num}`} class={`text-3xl opacity-20 grayscale transition-transform group-hover:scale-110 ${existingRoster[num-1]?.image_url ? 'hidden' : 'block'}`}>
                  ðŸ‘¸
                </span>
                
                <div class="absolute top-4 left-4 bg-slate-900 text-white text-[10px] font-black w-7 h-7 rounded-xl flex items-center justify-center italic z-10 shadow-lg group-hover:bg-pink-600 transition-colors">
                  {num}
                </div>
              </div>

              <div class="p-4 bg-white z-20">
                <label class="text-[10px] font-black uppercase text-slate-400 block mb-2 ml-1">Rank #{num} Bonus</label>
                <select 
                  name={`queen${num}`} 
                  id={`select-slot-${num}`}
                  required
                  class="queen-selector w-full bg-slate-50 border-none rounded-2xl py-3 px-4 text-sm font-black uppercase text-slate-800 focus:ring-2 focus:ring-pink-500 outline-none transition-colors"
                >
                  <option value="">Select a Queen...</option>
                  {queens.map(q => (
                    <option 
                      value={q.name} 
                      data-photo={q.image_url} 
                      selected={existingRoster[num-1]?.queen_name === q.name}
                    >
                      {q.name}
                    </option>
                  ))}
                </select>
              </div>
            </div>
          ))}
        </div>

        <button type="submit" class="w-full bg-pink-600 text-white font-black py-6 rounded-[2.5rem] uppercase tracking-widest shadow-xl shadow-pink-100 hover:bg-pink-700 hover:scale-[1.01] transition-all active:scale-95">
          Lock in Episode {currentEp} Team
        </button>
      </form>
    )}

    {/* 3. SHOW ROSTER AS READ-ONLY IF LOCKED */}
    {isLocked && existingRoster.length > 0 && (
       <div class="grid grid-cols-2 md:grid-cols-4 gap-4 opacity-75">
          {existingRoster.map(q => (
            <div class="text-center">
               <img src={q.image_url} class="w-full aspect-square object-cover rounded-2xl grayscale mb-2" />
               <p class="font-black uppercase italic text-xs text-slate-600">{q.queen_name}</p>
            </div>
          ))}
       </div>
    )}
  </div>
</MainLayout>

<script>
  // Client-side script to update images when dropdown changes
  const selectors = document.querySelectorAll('.queen-selector');
  
  selectors.forEach(select => {
    select.addEventListener('change', (e) => {
      const num = e.target.id.split('-').pop();
      const selectedOption = e.target.options[e.target.selectedIndex];
      const photoUrl = selectedOption.getAttribute('data-photo');
      
      const img = document.getElementById(`img-slot-${num}`);
      const icon = document.getElementById(`icon-slot-${num}`);
      
      if (photoUrl) {
        img.src = photoUrl;
        img.classList.remove('opacity-0');
        img.classList.add('opacity-100');
        icon.classList.add('hidden');
      } else {
        img.classList.add('opacity-0');
        icon.classList.remove('hidden');
      }
    });
  });
</script>

