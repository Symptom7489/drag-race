---
import MainLayout from '../layouts/MainLayout.astro'; 
import { formatMultipliers, getSettings, getUserLeagues, getUserTeam } from '../lib/queries';

const userId = Astro.cookies.get("userId")?.value;
if (!userId) return Astro.redirect('/login');

// 1. Get the settings object
const settings = await getSettings();

// 2. Extract the current episode (default to 1 if not set)
const currentEp = parseInt(settings.current_episode || "1");

const mults = formatMultipliers(settings);
// 3. Fetch data using that episode number
const myLeagues = await getUserLeagues(userId, currentEp);
const myTeam = await getUserTeam(userId, currentEp);

---

<MainLayout title="My Dashboard">
  <div class="max-w-6xl mx-auto py-10 px-4">
    
    <div class="mb-12 flex justify-between items-end">
      <div>
        <h1 class="text-4xl font-black italic uppercase text-slate-900">Your Roster</h1>
        <p class="text-slate-500 font-bold uppercase tracking-widest text-xs">Season Standings â€¢ Ep {currentEp}</p>
      </div>
      <a href="/draft" class="text-[10px] font-black uppercase text-pink-600 border-2 border-pink-100 px-4 py-2 rounded-xl hover:bg-pink-50 transition-colors">
        Edit Team
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <div class="lg:col-span-2 space-y-6">
        {myTeam.length === 0 ? (
          <div class="bg-white rounded-[3rem] p-12 text-center border-2 border-dashed border-slate-200">
            <div class="text-5xl mb-4">ðŸ‘¸</div>
            <h2 class="text-2xl font-black uppercase italic text-slate-800">No Queens Drafted!</h2>
            <p class="text-slate-500 font-medium mb-8">You need to pick your team for Episode {currentEp}.</p>
            <a href="/draft" class="inline-block bg-pink-600 text-white font-black px-10 py-4 rounded-2xl uppercase tracking-widest shadow-lg shadow-pink-100 hover:scale-105 transition-transform">
              Go to Draft
            </a>
          </div>
        ) : (
          myTeam.map((q) => (
            <div class="bg-white rounded-3xl border-2 border-slate-100 overflow-hidden shadow-sm hover:border-pink-200 transition-colors">
              <div class="p-6 flex justify-between items-center">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-slate-900 rounded-2xl flex items-center justify-center text-white font-black">
                    {q.rank}
                  </div>
                  <div>
                    <h3 class="text-xl font-black uppercase italic text-slate-800">{q.queen_name}</h3>
                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tighter">Current Rank in Team</p>
                  </div>
                </div>
                <div class="text-right">
                  <span class="text-3xl font-black text-slate-900">{parseFloat(q.calculated_points).toFixed(1)}</span>
                  <p class="text-[9px] font-black text-slate-400 uppercase">
                    Ep {currentEp} Score
                  </p>
                </div>
              </div>
            </div>
          ))
        )}
      </div>

      <div class="space-y-6">
        <div class="flex justify-between items-center mb-2">
          <h2 class="text-xs font-black uppercase tracking-widest text-slate-400">My Leagues</h2>
          <button class="text-[10px] font-bold text-pink-600 uppercase">+ Join</button>
        </div>

        {myLeagues.length > 0 ? (
          myLeagues.map((league) => (
            <a 
              href={`/leagues/${league.id}`} 
              class="block bg-white p-6 rounded-3xl border-2 border-slate-100 hover:border-pink-500 hover:shadow-xl hover:shadow-pink-100/50 transition-all group"
            >
              <div class="flex justify-between items-start mb-6">
                <div>
                  <h3 class="text-lg font-black uppercase italic text-slate-800 group-hover:text-pink-600 transition-colors leading-tight">
                    {league.league_name}
                  </h3>
                  <p class="text-[9px] font-bold text-slate-400 uppercase">{league.member_count} Players</p>
                </div>
                <div class="flex-shrink-0 bg-slate-100 group-hover:bg-pink-100 p-2 rounded-xl transition-colors self-start">
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    class="w-5 h-5 text-slate-400 group-hover:text-pink-600 transition-colors" 
    viewBox="0 0 24 24" 
    fill="none" 
    stroke="currentColor" 
    stroke-width="3" 
    stroke-linecap="round" 
    stroke-linejoin="round"
  >
    <polyline points="9 18 15 12 9 6"></polyline>
  </svg>
</div>
              </div>

              <div class="grid grid-cols-2 gap-4 pt-4 border-t border-slate-50">
                <div>
                  <p class="text-[8px] font-black text-slate-400 uppercase tracking-widest mb-1">Weekly</p>
                  <p class="text-xl font-black text-slate-900">+{parseFloat(league.weekly_score).toFixed(1)}</p>
                </div>
                <div class="text-right">
                  <p class="text-[8px] font-black text-slate-400 uppercase tracking-widest mb-1">Season</p>
                  <p class="text-xl font-black text-pink-600">{parseFloat(league.season_total).toFixed(1)}</p>
                </div>
              </div>
            </a>
          ))
        ) : (
          <div class="text-center py-10 bg-slate-50 rounded-3xl border-2 border-dashed border-slate-200">
            <p class="text-slate-400 font-bold uppercase text-[9px] mb-4">No Leagues Found</p>
            <form method="POST" action="/api/create-league" class="px-4">
              <input 
                type="text" 
                name="leagueName" 
                placeholder="League Name" 
                required 
                class="w-full px-4 py-2 rounded-xl border border-slate-200 mb-2 text-sm font-bold"
              />
              <button type="submit" class="w-full bg-slate-900 text-white font-black py-2 rounded-xl text-xs uppercase tracking-widest hover:bg-pink-600 transition-colors">
                Create
              </button>
            </form>
          </div>
        )}
      </div>

    </div>
  </div>
</MainLayout>