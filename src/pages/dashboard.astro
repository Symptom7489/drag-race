---
import MainLayout from '../layouts/MainLayout.astro';
import { sql } from '../lib/db';

const userId = Astro.cookies.get("userId")?.value;
if (!userId) return Astro.redirect('/login');

// 1. Fetch Multipliers
const multSettings = await sql`SELECT * FROM settings WHERE key LIKE 'multiplier_rank_%'`;
const mults = {
  1: parseFloat(multSettings.find(s => s.key === 'multiplier_rank_1')?.value || "2.0"),
  2: parseFloat(multSettings.find(s => s.key === 'multiplier_rank_2')?.value || "1.5"),
  3: parseFloat(multSettings.find(s => s.key === 'multiplier_rank_3')?.value || "1.0"),
  4: parseFloat(multSettings.find(s => s.key === 'multiplier_rank_4')?.value || "0.5"),
};

// 2. Fetch Global Settings (like Current Episode)
const settingsResult = await sql`SELECT value FROM settings WHERE key = 'current_episode'`;
const currentEp = settingsResult.length > 0 ? settingsResult[0].value : 1;

// 3. Fetch the team raw data
const rawTeam = await sql`
  SELECT 
    r.queen_name,
    r.rank, 
    COALESCE(SUM(qbs.points), 0) as raw_points
  FROM rosters r
  LEFT JOIN queen_box_scores qbs ON r.queen_name = qbs.queen_name
  WHERE r.user_id = ${userId}
  GROUP BY r.queen_name, r.rank
  ORDER BY r.rank ASC
`;

// 4. Apply multipliers (THIS IS THE ONLY VERSION OF myTeam YOU NEED)
const myTeam = rawTeam.map(q => ({
  ...q,
  total_queen_points: (parseFloat(q.raw_points) * (mults[q.rank] || 1.0)).toFixed(1)
}));

// 5. Fetch score breakdown for the details view
const scoreBreakdown = await sql`
  SELECT queen_name, stat_type, points, episode_number
  FROM queen_box_scores
  WHERE queen_name IN (SELECT queen_name FROM rosters WHERE user_id = ${userId})
  ORDER BY episode_number DESC, points DESC
`;

// 6. Fetch the user's leagues
const myLeagues = await sql`
  SELECT l.*, 
    (SELECT COUNT(*) FROM league_members WHERE league_id = l.id) as member_count
  FROM leagues l
  JOIN league_members lm ON l.id = lm.league_id
  WHERE lm.user_id = ${userId}
`;

// 7. Handle POST actions (Create/Join)
if (Astro.request.method === "POST") {
  const data = await Astro.request.formData();
  const action = data.get("action");

  if (action === "create_league") {
    const name = data.get("leagueName");
    const inviteCode = Math.random().toString(36).substring(2, 7).toUpperCase();

    const [newLeague] = await sql`
      INSERT INTO leagues (name, invite_code, owner_id) 
      VALUES (${name}, ${inviteCode}, ${userId})
      RETURNING id
    `;
    
    await sql`INSERT INTO league_members (league_id, user_id) VALUES (${newLeague.id}, ${userId})`;
    return Astro.redirect('/dashboard');
  }
}
