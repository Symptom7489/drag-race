---
import MainLayout from '../layouts/MainLayout.astro'; 
import { getSettings, getUserLeagues, getUserTeam } from '../lib/queries';

const userId = Astro.cookies.get("userId")?.value;
if (!userId) return Astro.redirect('/login');

// 1. Get the settings object
const settings = await getSettings();

// 2. Extract the current episode (default to 1 if not set)
const currentEp = parseInt(settings.current_episode || "1");

// 3. Fetch data using that episode number
const myLeagues = await getUserLeagues(userId, currentEp);
const myTeam = await getUserTeam(userId, currentEp);

// ... after const settings = await getSettings(); ...

const mults = {
  1: parseFloat(settings.multiplier_rank_1 || "2.0"),
  2: parseFloat(settings.multiplier_rank_2 || "1.5"),
  3: parseFloat(settings.multiplier_rank_3 || "1.0"),
  4: parseFloat(settings.multiplier_rank_4 || "0.5"),
};
---

<MainLayout title="My Dashboard">
  <div class="max-w-6xl mx-auto py-10 px-4">
    
    <div class="mb-12 flex justify-between items-end">
      <div>
        <h1 class="text-4xl font-black italic uppercase text-slate-900">Your Roster</h1>
        <p class="text-slate-500 font-bold uppercase tracking-widest text-xs">Season Standings â€¢ Ep {currentEp}</p>
      </div>
      <a href="/draft" class="text-[10px] font-black uppercase text-pink-600 border-2 border-pink-100 px-4 py-2 rounded-xl hover:bg-pink-50 transition-colors">
        Edit Team
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <div class="lg:col-span-2">
        {myTeam.length === 0 ? (
          <div class="bg-white rounded-[3rem] p-12 text-center border-2 border-dashed border-slate-200">
            <div class="text-5xl mb-4">ðŸ‘¸</div>
            <h2 class="text-2xl font-black uppercase italic text-slate-800">No Queens Drafted!</h2>
            <p class="text-slate-500 font-medium mb-8">You need to pick your team for Episode {currentEp}.</p>
            <a href="/draft" class="inline-block bg-pink-600 text-white font-black px-10 py-4 rounded-2xl uppercase tracking-widest shadow-lg shadow-pink-100 hover:scale-105 transition-transform">
              Go to Draft
            </a>
          </div>
        ) : (
          <div class="space-y-6">
            {myTeam.map((q) => (
              /* ... Keep your existing Queen Card code with the <details> breakdown here ... */
              <div class="bg-white rounded-3xl border-2 border-slate-100 overflow-hidden shadow-sm hover:border-pink-200 transition-colors">
                <div class="p-6 flex justify-between items-center">
                  <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-slate-900 rounded-2xl flex items-center justify-center text-white font-black">
                      {q.rank}
                    </div>
                    <div>
                      <h3 class="text-xl font-black uppercase italic text-slate-800">{q.queen_name}</h3>
                      <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tighter text-left">Current Rank in Team</p>
                    </div>
                  </div>
                  <div class="text-right">
  <span class="text-3xl font-black text-slate-900">{q.total_queen_points}</span>
  <p class="text-[9px] font-black text-slate-400 uppercase">
    {q.raw_points} pts Ã— {mults[q.rank]}x
  </p>
</div>
                </div>
                {/* Score Breakdown Details Area */}
              </div>
            ))}
          </div>
        )}
      </div>

      <div class="space-y-4 mb-4">
  {myLeagues.length > 0 ? (
    myLeagues.map(league => (
      <a href={`/leagues/${league.invite_code}`} class="block bg-white p-5 rounded-2xl border border-slate-200 hover:border-pink-500 hover:shadow-md transition-all group">
        
        <h3 class="font-black uppercase italic text-slate-800">
  {league.league_name}
</h3>
<div class="mt-2 text-pink-600 font-black text-xl">
  {parseFloat(league.season_total || 0).toFixed(1)} 
  <span class="text-[10px] text-slate-400 uppercase tracking-wider">Season Pts</span>
</div>

<div class="text-purple-600 font-bold text-sm italic">
  +{parseFloat(league.weekly_score || 0).toFixed(1)} this week
</div>

{myLeagues.map(league => (
  <a href={`/leagues/${league.invite_code}`} class="block bg-white p-6 rounded-[2rem] border-2 border-slate-100 hover:border-pink-500 hover:shadow-xl hover:shadow-pink-100/50 transition-all group mb-6 last:mb-0">
    
    <h3 class="text-xl font-black uppercase italic text-slate-800 group-hover:text-pink-600 transition-colors">
      {league.league_name}
    </h3>

    <div class="flex justify-between items-end mt-6">
      <div class="flex flex-col">
        <span class="text-[9px] font-black uppercase text-slate-400 mb-1 tracking-tighter">Entry Code</span>
        <div class="bg-slate-900 text-white px-4 py-2 rounded-xl font-mono text-xl font-black tracking-widest shadow-inner">
          {league.invite_code}
        </div>
      </div>

      <div class="flex flex-col items-end">
        <span class="text-2xl font-black text-slate-800 leading-none">{league.member_count}</span>
        <span class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Players</span>
      </div>
    </div>
  </a>
))}
      </a>
    )) 
  ) : (
    <div class="text-center py-6">
      <p class="text-slate-400 font-bold uppercase text-[9px] mb-4">No active leagues</p>
      <button onclick="document.getElementById('createLeagueModal').showModal()" class="text-[10px] font-black uppercase text-pink-600 hover:underline">
        Create One Now
      </button>
    </div>
  )}
</div>
        </div>

        <div class="bg-pink-600 rounded-[2rem] p-6 text-white shadow-lg shadow-pink-100">
          <h3 class="font-black uppercase italic mb-3">Join a Friend</h3>
          <form method="POST" class="flex gap-2">
            <input type="hidden" name="action" value="join_league" />
            <input 
              type="text" 
              name="inviteCode" 
              placeholder="CODE" 
              maxlength="8"
              class="w-full bg-white/20 border-none rounded-xl p-3 text-center font-mono font-black placeholder:text-white/50 focus:ring-2 focus:ring-white outline-none"
            />
            <button type="submit" class="bg-white text-pink-600 font-black px-4 rounded-xl uppercase text-xs hover:bg-slate-100 transition-colors">
              Go
            </button>
          </form>
        </div>
      </div>

    </div>
  </div>
</MainLayout>