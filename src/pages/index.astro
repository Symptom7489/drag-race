---
// src/pages/index.astro
import { neon } from '@neondatabase/serverless';

const sql = neon(import.meta.env.DATABASE_URL);
const response = await sql`SELECT 'Connected to Neon!' as status`;
const status = response[0].status;
---

<html>
  <body>
    <h1>{status}</h1>
    <p>If you see 'Connected to Neon!' above, your setup is perfect.</p>
  </body>
</html>